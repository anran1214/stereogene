<tool id="stereogene" name="Stereogene">
  <description>FFT-based correlation between two files of genomic intervals</description>
   <!-- We wold prefer to avoid config
  <command> StereoGene -cfg $cfg -chrom $chrom $query $reference $output</command>
  -->
  <version_command>StereoGene -v</version_command>
  <command interpreter="bash">stereogene-galaxy-simple.sh $chrom $query ${query.ext} $reference ${reference.ext} $wsize $pdf</command>
  <inputs>
    
    <!-- We wold prefer to avoid config
    <param format="text" name="cfg" type="data" label="Configuration file"/>
    -->
    <param format="text" name="chrom" type="data" label="Chromosome file"/>
    <param format="text" name="query" type="data" label="Track 1"/>
    <param format="text" name="reference" type="data" label="Track 2"/>
    <param name="wsize" type="select" label="Window size">
	<option value='10000'>10000</option>
	<option value='100000' select='true'>100000</option>
	<option value='1000000'>1000000</option>
    </param>
    <param name="corrtrack" type="boolean" label="Save correlation track" checked="false"/>
  </inputs>
  <outputs>
     <data name="pdf" label="SG results: ${query.name} vs ${reference.name}" hidden='false' format="pdf"/>
  </outputs>

  <help>
This tool determines the genomewide spatial correlation between two tracks or coverage files.
  </help>

</tool>
